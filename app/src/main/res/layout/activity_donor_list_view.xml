<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.sachet.bloodsearch.BloodlistViewActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:background="@color/mytext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center"
                    android:id="@+id/bloodlist_userimage"
                    android:layout_margin="10dp"
                    android:layout_width="120dp"
                    android:layout_height="130dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="@color/red"
                  android:padding="10dp"
                    android:src="@mipmap/no_img"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:id="@+id/bloodlist_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="3dp"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="25sp" />

                <TextView
                    android:fontFamily="sans-serif-condensed"

                    android:id="@+id/bloolist_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="3dp"
                    android:text="City"
                    android:textColor="#000000"

                    android:textSize="18sp" />

                <TextView
                    android:fontFamily="sans-serif-condensed"

                    android:id="@+id/bloodlist_bloodgroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="3dp"
                    android:text="Bloodgroup"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:fontFamily="sans-serif-condensed"

                    android:id="@+id/bloodlist_contact_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:padding="3dp"
                    android:text="Contact No."

                    android:textColor="#000000"
                    android:textSize="18sp" />


            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
